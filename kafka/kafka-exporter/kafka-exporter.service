[Unit]
Description=Kafka Exporter Service
After=network.target zookeeper.service

[Service]
WorkingDirectory=/home/koqizhao/kafka-exporter
ExecStart=/bin/sh /home/koqizhao/kafka-exporter/start.sh
ExecStop=/bin/sh /home/koqizhao/kafka-exporter/stop.sh
Restart=always
RestartSec=10
TimeoutSec=360

[Install]
WantedBy=multi-user.target
